<UserControl x:Class="Standard_UC_JJO.PickFile_JJO"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Standard_UC_JJO"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200">
    <Grid Height="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image MouseDown="File_click" Source="Images/5128-tOo-Dossierferme.png" 
               RenderOptions.BitmapScalingMode="Fant"
               Stretch="UniformToFill" 
               Height="25"
               VerticalAlignment="Top"
               />
        <Label Grid.Column="1" Content="{Binding _filepath, ElementName=pickFolder}"/>
    </Grid>
</UserControl>
